    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-etc": "^1.10.0",
    "tslint-react": "^4.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/App/**",
      "!**/components/**",
      "!**/containers/**",
      "!**/routes/**",
      "!**/state/*.js"
