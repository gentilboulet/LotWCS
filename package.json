    "src/**/*.{ts,tsx}": [
      "tslint --project tsconfig.json -c tslint.json --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/jest": "^24.9.0",
